<!doctype html>
<html lang="fr">
<head>
    <%- include('./header.ejs')%>
    <title>Page</title>
</head>
<body>
<%- include('./navbar.ejs')%>
<h1 class="text-center">Modification utilisateur !</h1>

<form action="/traitementModif" method="post">
    <input hidden name="id" value="<%= userAModif.id%>">
    <div class="form-group">
        <label for="nom">nom</label>
        <input type="text" class="form-control" id="nom" name="name" placeholder="Ex: Paul" value="<%= userAModif.name%>">
    </div>
    <div class="form-group">
        <label for="pseudo">pseudo</label>
        <input type="text" class="form-control" id="pseudo" name="username" placeholder="Ex: xX_Darksasukedu93_Xx" value="<%= userAModif.username%>">
    </div>
    <div class="form-group">
        <label for="phone">Téléphone</label>
        <input type="text" class="form-control" id="phone" name="phone" placeholder="Ex: 06 00 00 00 00" value="<%= userAModif.phone%>">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Ex: Jean.Paul@gmail.com" value="<%= userAModif.email%>">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</body>
</html>