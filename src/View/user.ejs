<!doctype html>
<html lang="fr">
<head>
    <%- include('./header.ejs')%>
    <title>Page</title>
</head>
<body>
    <%- include('./navbar.ejs')%>
    <h1 class="text-center">User Works !</h1>

    <div class="listCard">
        <% for (let i = 0; i < listUser.data.length; i++ ){%>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= listUser.data[i].name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= listUser.data[i].username %></h6>
                    <p class="card-text"><%= listUser.data[i].phone %></p>
                    <a href="/detail/<%= listUser.data[i].id %>" class="btn btn-primary">Detail</a>
                    <a href="/modified/<%= listUser.data[i].id %>" class="btn btn-warning">Modifier</a>
                    <a href="/delete/<%= listUser.data[i].id %>" class="btn btn-danger">Delete</a>
                </div>
            </div>
        <%}%>
    </div>
</body>
</html>